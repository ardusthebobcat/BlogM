Title: <%= @post.title %>
<br>
Author: <%= @post.author %>

<br>Comments:
  <ul>
    <% @post.comments.each do |comment| %>
      <li><%= comment.content %></li>
    <% end %>
  </ul>
<% if @post.tags %> Tags:
  <% @post.tags.each do |tag| %>
    #<%= link_to tag.title, edit_post_tag_path(@post.id, tag.id) %>
  <% end %>
<% end %>
<br>
<%= link_to "New Comment", new_post_comment_path(@post) %>
<%= link_to "Add Tag to Post", new_post_tag_path(@post) %>
<br><hr><br>
<%= link_to "EDIT", edit_post_path(@post.id) %>
<%= link_to "DELETE", post_path(@post.id), :data => {:confirm => "Are you sure you want to delete this?", :method =>"delete"} %>
